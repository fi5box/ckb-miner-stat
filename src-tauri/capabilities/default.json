{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:allow-read-file",
    "fs:allow-exists",
    {
      "identifier": "fs:scope",
      "allow": ["$RESOURCE/../**"]
    },
    "fs:allow-write-file",
    {
      "identifier": "fs:scope",
      "allow": ["$RESOURCE/../**"]
    }
  ]
}